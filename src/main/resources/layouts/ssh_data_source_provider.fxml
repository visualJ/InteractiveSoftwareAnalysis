<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<fx:root xmlns:fx="http://javafx.com/fxml/1" spacing="10.0" type="VBox" xmlns="http://javafx.com/javafx/8.0.60">
    <VBox spacing="5.0">
        <children>
            <Label text="Host und Port"/>
            <HBox spacing="5.0">
                <children>
                    <TextField fx:id="sshHost" promptText="Host" HBox.hgrow="SOMETIMES"/>
                    <TextField fx:id="sshPort" prefWidth="70.0" promptText="Port"/>
                </children>
            </HBox>
        </children>
    </VBox>
    <VBox spacing="5.0">
        <children>
            <Label text="Nutzername und Passwort"/>
            <HBox spacing="5.0">
                <children>
                    <TextField fx:id="sshUsername" promptText="Nutzername" HBox.hgrow="SOMETIMES"/>
                    <PasswordField fx:id="sshPassword" promptText="Passwort" HBox.hgrow="SOMETIMES"/>
                </children>
            </HBox>
        </children>
    </VBox>
</fx:root>
